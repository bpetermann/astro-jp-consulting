---
import { Header, Footer, MobileHeader } from '@/components/Organisms/App';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <MobileHeader client:only />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;800&display=swap');
  html {
    font-family:
      Open Sans,
      Helvetica,
      Arial,
      sans-serif;
    background: #fff;
    background-size: 224px;
  }

  body {
    margin: 0;
    box-sizing: border-box;
  }

  * {
    box-sizing: border-box;
  }

  h1 {
    font-weight: 800;
    line-height: 44px;
    font-size: 36px;
  }

  p {
    font-weight: 400px;
    font-size: 14px;
    line-height: 22px;
  }

  @media (min-width: 768px) {
    h1 {
      font-weight: 600;
      line-height: 36px;
      font-size: 24px;
    }
    p {
      font-size: 16px;
      line-height: 26px;
    }
  }
</style>
