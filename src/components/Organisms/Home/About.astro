---
interface Props {
  description: string;
}

const { description } = Astro.props;
---

<div class='container'>
  <div>
    <div>
      <p>
        {description}
      </p>
    </div>
    <div class='picture'>
      <img src='images/placeholder.png' />
    </div>
  </div>
</div>

<style>
  .container {
    width: 100%;
    max-width: 1368px;
    height: 480px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #d5c3aa;
    padding: 8px;
    border-radius: 24px;
  }

  .container > div {
    width: 100%;
    max-width: 1368px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: center;
    padding: 8px;
    gap: 24px;
  }

  .container > div > div {
    max-width: 300px;
    text-align: center;
  }

  .picture {
    width: 100%;
    max-width: 360px;
    height: 100%;
    border-radius: 24px;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 24px;
  }
</style>
