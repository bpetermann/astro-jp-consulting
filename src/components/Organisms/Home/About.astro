---
interface Props {
  description: string;
}

const { description } = Astro.props;
---

<div class='container'>
  <div>
    <div>
      <p>
        {description}
      </p>
    </div>
    <div class='picture'></div>
  </div>
</div>

<style>
  .container {
    width: 100%;
    height: 480px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #c0c0c0;
    padding: 8px;
  }

  .container > div {
    width: 100%;
    max-width: 768px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: center;
    padding: 8px;
    gap: 24px;
  }

  .container > div > div {
    max-width: 300px;
    text-align: center;
  }

  .picture {
    width: 240px;
    height: 240px;
    border-radius: 50%;
    background-color: #333;
  }
</style>
