---
interface Props {
  title: string;
  text1: string;
  text2: string;
}

const { title, text1, text2 } = Astro.props;
---

<div class='intro'>
  <div class='inner'>
    <div class='title'>{title}</div>
    <p>
      {text1}
    </p>
    <p>
      {text2}
    </p>
  </div>
</div>

<style>
  .title {
    font-weight: 600;
    line-height: 28px;
    font-size: 20px;
  }
  div:first-of-type {
    text-align: center;
    display: flex;
    flex-direction: column;
    padding: 32px 16px;
  }

  div:last-of-type {
    max-width: 640px;
  }

  @media (min-width: 768px) {
    .title {
      font-weight: 600;
      line-height: 36px;
      font-size: 24px;
    }
  }
</style>
