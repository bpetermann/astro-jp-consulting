---
interface Props {
  leftTitle: string;
  leftText: string;
  title1: string;
  text1: string;
  title2: string;
  text2: string;
  title3: string;
  text3: string;
}

const { leftTitle, leftText, title1, text1, title2, text2, title3, text3 } =
  Astro.props;
---

<div class='container'>
  <div class='left-panel'>
    <div>
      <div class='title'>{leftTitle}</div>
      <p>
        {leftText}
      </p>
    </div>
  </div>
  <div class='right-panel'>
    <div class='one'>
      <div class='title'>{title1}</div>
      <p>
        {text1}
      </p>
      <span class='left-span'>1</span>
    </div>
    <div class='two'>
      <div class='title'>{title2}</div>
      <p>
        {text2}
      </p>
      <span class='right-span'>2</span>
    </div>
    <div class='three'>
      <div class='title'>{title3}</div>
      <p>
        {text3}
      </p>
      <span class='left-span'>3</span>
    </div>
  </div>
</div>

<style>
  .container {
    width: 100%;
    max-width: 1368px;
    padding: 32px 0px;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
  }

  .title {
    font-weight: 600;
    line-height: 36px;
    font-size: 24px;
    margin: 16px 0px;
  }

  .right-panel {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16px;
    gap: 32px;
  }

  .one {
    padding: 0px 16px;
    padding-left: 32px;
    max-width: 400px;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .two {
    padding: 0px 16px;
    padding-left: 68px;
    max-width: 400px;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    position: relative;
  }

  .three {
    padding: 16px;
    padding-left: 32px;
    max-width: 400px;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .right-span {
    position: absolute;
    font-size: 200px;
    font-weight: 600;
    right: -16px;
    top: -32px;
    opacity: 0.2;
  }

  .left-span {
    position: absolute;
    font-size: 200px;
    font-weight: 600;
    left: -16px;
    top: -32px;
    opacity: 0.2;
  }

  .left-panel {
    width: 100%;
    padding: 16px;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .left-panel > div {
    max-width: 400px;
  }

  @media (min-width: 768px) {
    .title {
      font-weight: 600;
      line-height: 36px;
      font-size: 24px;
    }
    .container {
      flex-direction: row;
    }

    .left-panel {
      width: 50%;
      top: 50px;
      position: sticky;
      padding: 32px;
    }

    .right-panel {
      width: 50%;
      padding: 32px;
    }
  }
</style>
