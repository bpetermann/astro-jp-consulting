---
import { NavButton } from '@/components/Atoms/App';
import { Navigation, MobileNav } from '@/components/Molecules/App';
import ScrollIndicator from './ScrollIndicator';
---

<header>
  <div>
    <div>
      <NavButton />
      <Navigation />
    </div>
  </div>
  <ScrollIndicator client:only />
</header>

<MobileNav />

<style>
  header {
    top: 0;
    position: sticky;
  }

  header > div:first-of-type {
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 30px;
    height: 50px;
    border-bottom: 1px solid #c0c0c0;
  }

  div > div {
    width: 100%;
    max-width: 1368px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
</style>
