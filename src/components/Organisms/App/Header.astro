---
import { ScrollIndicator } from '@/components/Atoms/App';
import { Navigation } from '@/components/Molecules/App';
---

<header>
  <ScrollIndicator client:only />
  <div>
    <div>
      <Navigation />
    </div>
  </div>
</header>

<style>
  header {
    top: 0;
    position: sticky;
    display: none;
  }

  header > div:first-of-type {
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 30px;
    height: 50px;
    border-radius: 0px 0px 24px 24px;
  }

  div > div {
    width: 100%;
    max-width: 1368px;
  }

  @media (min-width: 960px) {
    header {
      display: block;
      z-index: 10;
    }
  }
</style>
